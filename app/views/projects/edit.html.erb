<head>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<main id="login">
    <form id="login-form" action="/projects/<%= @project.id %>" method="post">
        
        <h1>edit: <%= @project.title %>.</h1>
        <input type="hidden" name="_method" value="PATCH">
        
        <label for="title">Edit Title:</label>
        <% if session[:errors][:title] %>
            <p><%= session[:errors][:title] %></p>
        <% end %>
        <input type="text" name="title" id="title" value="<%= @project.title %>">
        
        <label for="description">Edit Desc.:</label>

        <% session[:errors].clear %>
        <input type="text" name="description" id="description" value="<%= @project.description %>">
        
        <input type="submit" value="Update">
    </form>

</main>
