<link rel="stylesheet" href="/stylesheets/board.css">
<h1><%= @project.title %></h1>
<span>Started: <%= @project.created_at %></span>
<p><%= @project.description %></p>
<form action="/projects/<%= @project.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span></button>
</form>

<form action="/tasks" method="post">
    <input type="hidden" name="project_id" value="<%= @project.id %>">
    <label for="content">Content: </label>
    <input type="text" name="content" id="content">
    <input type="submit" value="Add Task">
</form>
<br>
<% states = ["To-Do", "In-Progress", "Completed"]%>

<div class="row">
    <div class="state-column col-sm-3">
        <h4>TODO</h4>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        +
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h3 class="modal-title" id="exampleModalLabel">Add Task</h3>
                    </div>
                    <form action="/tasks" method="post">
                        <input type="hidden" name="project_id" value="<%= @project.id %>">
                        <div class="modal-body">

                                <br>
                                <textarea type="text" cols="50" name="content" id="content"></textarea>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <% @project.tasks.each do |task| %>
            <% if task.doneness.to_i == 0 %>
                <section class="product-card">
                    <p><%= task.content %></p>
                    <form action="/tasks/<%= task.id %>/delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span></button>
                    </form>
                    <form action="/tasks/<%= task.id %>/move-up" method="post">
                        <input type="hidden" name="_method" value="patch">
                        <button type="submit" value="move-up"><span class="glyphicon glyphicon-chevron-right"></span></button>
                    </form>
                    <a href="/tasks/<%= task.id%>/edit"><span class="glyphicon glyphicon-edit"></span></a>
                </section>
            <br>
            <% end %>
        <% end %>
    </div>
    <div class="state-column col-sm-3">
        <h4>In-Progress</h4>
        <% @project.tasks.each do |task| %>
            <% if task.doneness.to_i == 1 %>
                <section class="product-card">
                    <p><%= task.content %></p>
                    <form action="/tasks/<%= task.id %>/delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span></button>
                    </form>
                    <form action="/tasks/<%= task.id %>/move-up" method="post">
                        <input type="hidden" name="_method" value="patch">
                        <button type="submit" value="move-up"><span class="glyphicon glyphicon-chevron-right"></span></button>
                    </form>
                    <a href="/tasks/<%= task.id%>/edit"><span class="glyphicon glyphicon-edit"></span></a>
                </section>
            <br>
            <% end %>
        <% end %>
    </div>
    <div class="state-column col-sm-3">
        <h4>Complete</h4>
        <% @project.tasks.each do |task| %>
            <% if task.doneness.to_i == 2 %>
                <section class="product-card">
                    <p><%= task.content %></p>
                    <form action="/tasks/<%= task.id %>/delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" value="Delete"><span class="glyphicon glyphicon-trash"></span></button>
                    </form>
                    <form action="/tasks/<%= task.id %>/move-up" method="post">
                        <input type="hidden" name="_method" value="patch">
                        <button type="submit" value="move-up"><span class="glyphicon glyphicon-chevron-right"></span></button>
                    </form>
                    <a href="/tasks/<%= task.id%>/edit"><span class="glyphicon glyphicon-edit"></span></a>
                </section>
            <br>
            <% end %>
        <% end %>
    </div>
    
</div>

